<h1>Welcome {{user.firstName}}</h1>
<h4>Your Blogs</h4>
{{#if blogs}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td><a href="/blogs/show/{{id}}">{{title}}</a></td>
      <td>{{formatDate data 'MMMM do YYYY'}}</td>
      <td><span class="dash-status">{{status}}</span></td>
      <td>
        <a class="btn left-align" href="/blogs/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>

        <form action="/blogs/{{id}}" method="post" id="delete-form">
          <button type="submit" class="btn red"><i class="fa fa-remove"></i> Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have not created any blogs yet</p>
{{/if}}